/* components/auto-input/auto-input.wxss */
.auto-input-index{
  
} 
.auto-input_view{
  width: 80%;
  height: 80rpx;
  margin: 0 auto;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
}
.auto-input-item{
  width: 80rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  border-radius:8rpx;
  border: 1rpx solid #000000;
}
.auto-input_container{
  /* 为什么input 同级的也会view盒子也会触发input事件？ */
  width: 100%;
  height: 80rpx;
  /* width: 0;
  height: 0; */
}
.active{
  border: 1rpx solid orange;
}
/* 仿密码小数点 */
.password-dot{
  width: 20rpx;
  height: 20rpx;
  background-color: #000;
  border-radius: 50%;
}
/* 仿光标 */
.cursor {
  width: 1px;
  height: 15px;
  background-color:#000;
  animation: focus 0.7s infinite;
}
/* 光标动画 */
@keyframes focus {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
  }
}